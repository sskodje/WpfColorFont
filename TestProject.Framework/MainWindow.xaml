<Window x:Class="TestProject.Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cf="clr-namespace:WpfColorFontDialog;assembly=WpfColorFontDialog.Framework"
        Title="MainWindow"
        Height="200"
        Width="450">
    <Grid>
        <StackPanel
>
            <TextBox Text="The quick brown fox jumps over the lazy dog "
                     x:Name="TextBlockSample"
                     FontSize="12"
                     FontStyle="Italic"
                     FontWeight="SemiBold"
                     Margin="10,0"/>
            <Button Content="Select Font"
                    HorizontalAlignment="Left"
                    Margin="10"
                    Width="100"
                    Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
